# postfix
# Avoid IPv6 initialisation in postfix
chroot "$BOOTSTRAP_MNT" postconf -e inet_protocols=ipv4

# PHP config
cat << "__EOF__" > "$BOOTSTRAP_MNT"/etc/php.d/local.ini
