chown -h root:root "$BOOTSTRAP_MNT"/etc/php.d/local.ini

cp -a "$BOOTSTRAP_MNT"/etc/php-fpm.d/{www.conf,pool.template}
cat << "__EOF__" > "$BOOTSTRAP_MNT"/etc/php-fpm.d/pool.template
