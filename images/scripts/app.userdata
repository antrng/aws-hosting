ldap_id_mapping = True
ldap_schema = ad
ldap_search_base = @@LDAP_BASE@@
ldap_idmap_autorid_compat = True
ldap_idmap_default_domain = @@AD_DOMAIN@@
fallback_homedir = /home/users/%u
use_fully_qualified_names = True
id_provider = ad
chpass_provider = ad
