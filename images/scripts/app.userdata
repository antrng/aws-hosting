#!/bin/bash
AD_USER="${1:-@@AD_JOIN_USER@@}"
AD_DOMAIN="${2:-@@AD_DOMAIN@@}"
AD_PASS="${3:-@@AD_JOIN_PASS@@}"
printf '%s' "$AD_PASS" | \
        adcli join -v --stdin-password --show-details -U "$AD_USER" "$AD_DOMAIN"
